@{
    Layout = null;
    ViewBag.Title = "Home Page";
}
<!------ Include the above in your HEAD tag ---------->
<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link href="~/Content/LoginBootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/LoginStyles.css" rel="stylesheet" />

    <noscript><meta http-equiv="refresh" content="0; url=/Home/Ooops" /></noscript>
    <script>
        if (!navigator.cookieEnabled) {
            //alert('Cookie is disabled');
            window.location = '/Home/NoCookie';
        }
    </script>
</head>
<body >
    @*<div class="logo" style="margin-top: 140px">
        <p class="font-green bold" style="text-align: center;font-weight: bold;color:green">Production Planning Management System</p>
    </div>*@
    <div class="container">
        @*<div class="d-flex justify-content-center" style="margin-top: 20px"><h1>Production Planning Management System</h1></div>*@
        <div class="d-flex justify-content-center h-100">
            @*<div style="text-align: center"><h1>Production Planning Management System</h1></div>*@
            <div class="card" style="background-color: white">
                <p style="color: white; font-weight: bold; text-align: center; font-size: 20px; background: #455C66">Production Planning Management System</p>
                <div class="card-header" style="background: #387185">
                    <h3>Sign In</h3>
                    <div></div>
                </div>
                <div class="card-body" style="background: #387185">
                    @*<form>*@
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "myForm" }))
                    {
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="username" id="username" name="username" required>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="password" id="password" name="password" required>
                        </div>
                        <div class="form-group" style="text-align: center">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-4"><input type="submit" value="Login" class="btn float-right login_btn"></div>
                            <div class="col-lg-4"></div>

                        </div>
                    }
                    @*</form>*@
                </div>
                <div class="card-footer" style="background: #455C66; ">
                    <div class="d-flex justify-content-center links">
                        Don't have an account? Please contact with administrator.
                    </div>
                    <div>
                        @*<a href="#">Forgot your password?</a>*@
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>

        $(function () {
            $(document).on('submit', 'form', function () {
                var buttons = $(this).find('[type="submit"]');
                if ($(this).valid()) {
                    buttons.each(function (btn) {
                        $(buttons[btn]).prop('disabled', true);
                    });
                } else {
                    buttons.each(function (btn) {
                        $(buttons[btn]).prop('disabled', false);
                    });
                }
            });

            $('#password').keypress(function (e) {
                $('#myForm').trigger('submit');
            });
        })
    </script>

</body>
</html>